# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# JavaScript, TypeScript, JSX, TSX
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Kotlin
[*.kt]
indent_style = space
indent_size = 4

# Java
[*.java]
indent_style = space
indent_size = 4

# Gradle
[*.gradle]
indent_style = space
indent_size = 4

# XML (Android manifests, layouts)
[*.xml]
indent_style = space
indent_size = 4

# Properties files
[*.properties]
indent_style = space
indent_size = 2

# SQL
[*.sql]
indent_style = space
indent_size = 2
