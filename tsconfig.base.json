{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["node"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@apps/*": ["apps/*/src"],
      "@ibimina/ai-agent": ["packages/ai-agent/src"],
      "@ibimina/ai-agent/*": ["packages/ai-agent/src/*"],
      "@ibimina/api": ["packages/api/src"],
      "@ibimina/api/*": ["packages/api/src/*"],
      "@ibimina/config": ["packages/config/src"],
      "@ibimina/config/*": ["packages/config/src/*"],
      "@ibimina/core": ["packages/core/src"],
      "@ibimina/core/*": ["packages/core/src/*"],
      "@ibimina/data-access": ["packages/data-access/src"],
      "@ibimina/data-access/*": ["packages/data-access/src/*"],
      "@ibimina/lib": ["packages/lib/src"],
      "@ibimina/lib/*": ["packages/lib/src/*"],
      "@ibimina/locales": ["packages/locales/src"],
      "@ibimina/locales/*": ["packages/locales/src/*"],
      "@ibimina/providers": ["packages/providers/src"],
      "@ibimina/providers/*": ["packages/providers/src/*"],
      "@ibimina/tapmomo-proto": ["packages/tapmomo-proto/src"],
      "@ibimina/tapmomo-proto/*": ["packages/tapmomo-proto/src/*"],
      "@ibimina/testing": ["packages/testing/src"],
      "@ibimina/testing/*": ["packages/testing/src/*"],
      "@ibimina/ui": ["packages/ui/src"],
      "@ibimina/ui/*": ["packages/ui/src/*"],
      "@ibimina/tooling/*": ["config/tooling/*"]
    }
  }
}
