{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["node"],
    "paths": {
      "@ibimina/config": ["packages/config/src"],
      "@ibimina/core": ["packages/core/src"],
      "@ibimina/testing": ["packages/testing/src"],
      "@ibimina/ui": ["packages/ui/src"]
    },
    "plugins": [
      { "name": "next" }
    ]
  }
}
