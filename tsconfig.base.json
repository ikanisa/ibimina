{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": [
      "node"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@ibimina/config": [
        "packages/config/src/index.ts"
      ],
      "@ibimina/core": [
        "packages/core/src/index.ts"
      ],
      "@ibimina/testing": [
        "packages/testing/src/index.ts"
      ],
      "@ibimina/ui": [
        "packages/ui/src/index.ts"
      ]
    }
  }
}