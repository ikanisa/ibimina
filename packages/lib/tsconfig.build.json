{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "incremental": false,
    "paths": {
      "@ibimina/config": ["./types/ibimina-config.d.ts"],
      "@ibimina/config/*": ["./types/ibimina-config.d.ts"]
    }
  },
  "include": ["src/**/*", "types/**/*.d.ts"],
  "exclude": ["dist", "node_modules", "tests", "**/*.test.ts"]
}
