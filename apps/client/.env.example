# -----------------------------------------------------------------------------
# Supabase configuration
# -----------------------------------------------------------------------------
# Obtain from Supabase project settings (Project Settings â†’ API)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Optional: service role access when running local edge tests from the client
SUPABASE_SERVICE_ROLE_KEY=

# -----------------------------------------------------------------------------
# External APIs
# -----------------------------------------------------------------------------
# AI + OCR providers
OPENAI_API_KEY=
OPENAI_RESPONSES_MODEL=gpt-4.1-mini
OPENAI_OCR_MODEL=gpt-4.1-mini
GOOGLE_VISION_API_KEY=

# Federated search service used by global search and insights panels
NEXT_PUBLIC_SEARCH_API_URL=
SEARCH_API_KEY=

# Observability / analytics
NEXT_PUBLIC_POSTHOG_KEY=
POSTHOG_HOST=https://app.posthog.com
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# -----------------------------------------------------------------------------
# Web Push Notifications (VAPID Keys)
# -----------------------------------------------------------------------------
# Generate using: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:your-email@example.com

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Set to 'true' or '1' to enable, anything else to disable
NEXT_PUBLIC_FEATURE_FLAG_WEB_PUSH=false
NEXT_PUBLIC_FEATURE_FLAG_BETA_FEATURES=false
NEXT_PUBLIC_FEATURE_FLAG_NEW_UI=false
