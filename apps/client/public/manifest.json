{
  "name": "Ibimina Client App",
  "short_name": "Ibimina",
  "description": "Member-facing app for Umurenge SACCO Ibimina. View contributions, request loans, and manage your ikimina membership.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#0b1020",
  "icons": [
    {
      "src": "/icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/store-assets/screenshots/onboarding.svg",
      "sizes": "1080x1920",
      "type": "image/svg+xml",
      "label": "Onboarding overview"
    },
    {
      "src": "/store-assets/screenshots/statements.svg",
      "sizes": "1080x1920",
      "type": "image/svg+xml",
      "label": "Monthly statements"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "shortcuts": [
    {
      "name": "View Contributions",
      "short_name": "Contributions",
      "description": "Check your contribution history",
      "url": "/contributions",
      "icons": [
        {
          "src": "/icons/icon-192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Request Loan",
      "short_name": "Loan",
      "description": "Apply for a new loan",
      "url": "/loans/new",
      "icons": [
        {
          "src": "/icons/icon-192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "My Profile",
      "short_name": "Profile",
      "description": "View your profile",
      "url": "/profile",
      "icons": [
        {
          "src": "/icons/icon-192.png",
          "sizes": "192x192"
        }
      ]
    }
  ]
}
