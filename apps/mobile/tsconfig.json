{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-native",
    "allowJs": false,
    "noEmit": true,
    "types": ["nativewind/types"],
    "moduleResolution": "node",
    "paths": {
      "@/features/*": ["./src/features/*"],
      "@/components/*": ["./src/components/*"],
      "@/providers/*": ["./src/providers/*"],
      "@/storage/*": ["./src/storage/*"],
      "@/services/*": ["./src/services/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
