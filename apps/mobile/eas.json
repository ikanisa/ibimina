{
  "cli": {
    "requireCommit": true
  },
  "build": {
    "production": {
      "distribution": "store",
      "android": {
        "buildType": "app-bundle",
        "credentialsSource": "remote"
      },
      "ios": {
        "simulator": false,
        "credentialsSource": "remote"
      }
    },
    "apk": {
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "credentialsSource": "remote"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./credentials/google-service-account.json"
      },
      "ios": {
        "ascAppId": "",
        "appleId": "",
        "appleTeamId": ""
      }
    }
  }
}
