{
  "name": "@ibimina/platform-api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "ts-node-esm src/index.ts",
    "build": "tsc -p tsconfig.json",
    "lint": "pnpm run lint:eslint && pnpm run lint:biome",
    "lint:eslint": "eslint --max-warnings=0 \"{src,api,tests}/**/*.{ts,tsx}\"",
    "lint:biome": "biome lint src api tests",
    "format": "biome format src api tests",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "pnpm run test:unit && pnpm run test:integration",
    "test:unit": "tsx --test tests/unit/*.test.ts",
    "test:integration": "tsx --test tests/integration/*.test.ts",
    "test:load": "tsx tests/performance/load-ingestion.ts",
    "test:chaos": "tsx tests/performance/chaos-edge.ts",
    "test:performance": "tsx tests/performance/run-performance.ts",
    "worker:momo": "node dist/workers/momo-poller.js",
    "worker:gsm": "node dist/workers/gsm-heartbeat.js"
  },
  "dependencies": {
    "@ibimina/config": "workspace:*",
    "@supabase/supabase-js": "^2.74.0",
    "pino": "^9.5.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@vercel/node": "^3.2.9",
    "@types/node": "20.19.21",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@biomejs/biome": "^1.9.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
