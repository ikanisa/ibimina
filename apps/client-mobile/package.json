{
  "name": "@ibimina/client-mobile",
  "version": "1.0.0",
  "description": "Ibimina Client Mobile App - Minimalist React Native app for SACCO members",
  "main": "index.js",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "type-check": "tsc --noEmit",
    "pods": "cd ios && pod install",
    "clean": "cd android && ./gradlew clean && cd ../ios && pod cache clean --all && rm -rf ~/Library/Developer/Xcode/DerivedData",
    "android:release": "cd android && ./gradlew assembleRelease",
    "android:bundle": "cd android && ./gradlew bundleRelease",
    "android:install-release": "cd android && ./gradlew installRelease",
    "ios:release": "cd ios && xcodebuild -workspace IbiminaClient.xcworkspace -scheme IbiminaClient -configuration Release -archivePath build/IbiminaClient.xcarchive archive",
    "build:production": "./build-production.sh",
    "version:patch": "npm version patch && cd ios && agvtool next-version -all && cd .. && cd android && ./gradlew incrementVersionCode",
    "version:minor": "npm version minor && cd ios && agvtool next-version -all && cd .. && cd android && ./gradlew incrementVersionCode",
    "version:major": "npm version major && cd ios && agvtool next-version -all && cd .. && cd android && ./gradlew incrementVersionCode"
  },
  "dependencies": {
    "@notifee/react-native": "^9.0.0",
    "@react-native-async-storage/async-storage": "^1.24.0",
    "@react-native-community/datetimepicker": "^8.5.0",
    "@react-navigation/bottom-tabs": "^6.6.1",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/native-stack": "^6.11.0",
    "@supabase/supabase-js": "^2.78.0",
    "@types/react-native-vector-icons": "^6.4.18",
    "date-fns": "^4.1.0",
    "expo-device": "^8.0.9",
    "expo-document-picker": "^14.0.7",
    "expo-image-picker": "^17.0.8",
    "expo-notifications": "^0.32.12",
    "react": "18.3.1",
    "react-native": "0.76.1",
    "react-native-gesture-handler": "^2.19.0",
    "react-native-haptic-feedback": "^2.3.3",
    "react-native-permissions": "^5.1.0",
    "react-native-reanimated": "^3.15.4",
    "react-native-safe-area-context": "^4.11.0",
    "react-native-screens": "^3.34.0",
    "react-native-skeleton-placeholder": "^5.2.4",
    "react-native-svg": "^15.7.1",
    "react-native-url-polyfill": "^2.0.0",
    "react-native-vector-icons": "^10.3.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native/babel-preset": "0.76.0",
    "@react-native/eslint-config": "0.76.0",
    "@react-native/metro-config": "0.76.0",
    "@react-native/typescript-config": "0.76.0",
    "@types/react": "^18.3.3",
    "@types/react-test-renderer": "^18.3.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "react-test-renderer": "18.3.1",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=20"
  }
}
