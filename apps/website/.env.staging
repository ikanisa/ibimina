# Staging environment configuration for the Ibimina marketing website.
# Real secrets are injected by CI/CD (Cloudflare Pages project: ibimina-website).
# The placeholders below MUST be overridden via Cloudflare Pages > Settings > Environment Variables.

# -----------------------------------------------------------------------------
# Site metadata
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SITE_URL=https://staging.ibimina.app
NEXT_PUBLIC_APP_URL=https://staging.app.ibimina.app
NEXT_PUBLIC_SUPPORT_EMAIL=support@ibimina.app

# -----------------------------------------------------------------------------
# Analytics & observability
# -----------------------------------------------------------------------------
NEXT_PUBLIC_POSTHOG_KEY=__REPLACE_WITH_POSTHOG_PUBLIC_KEY__
POSTHOG_HOST=https://app.posthog.com

NEXT_PUBLIC_SENTRY_DSN=__REPLACE_WITH_SENTRY_BROWSER_DSN__
SENTRY_DSN=__REPLACE_WITH_SENTRY_SERVER_DSN__
SENTRY_ENVIRONMENT=staging
SENTRY_RELEASE=__REPLACE_WITH_BUILD_ID__

# -----------------------------------------------------------------------------
# Monitoring tokens required for Sentry release health + deploy tracking
# (Only used in CI while publishing releases)
# -----------------------------------------------------------------------------
SENTRY_AUTH_TOKEN=__REPLACE_WITH_SENTRY_AUTH_TOKEN__
SENTRY_ORG=ibimina
SENTRY_PROJECT=website

# -----------------------------------------------------------------------------
# Feature flag service configuration (Supabase)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://staging.supabase.ibimina.app
NEXT_PUBLIC_SUPABASE_ANON_KEY=__REPLACE_WITH_SUPABASE_ANON_KEY__
SUPABASE_SERVICE_ROLE_KEY=__REPLACE_WITH_SUPABASE_SERVICE_ROLE_KEY__

# Optional marketing search API override
NEXT_PUBLIC_SEARCH_API_URL=
